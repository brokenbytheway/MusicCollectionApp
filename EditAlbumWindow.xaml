<Window x:Class="MusicCollectionApp.EditAlbumWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicCollectionApp"
        mc:Ignorable="d"
            xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="Изменение альбома" Height="700" Width="500" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Background="#1c0426">
        <Border MinWidth="200" Margin="15,0,15,0" Background="#e0beed" VerticalAlignment="Center" Padding="30" MaxWidth="550" CornerRadius="20" Height="592">
            <Border.Effect>
                <DropShadowEffect BlurRadius="40" Color="#e0beed" ShadowDepth="0"></DropShadowEffect>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Изменение альбома" FontSize="16" FontWeight="Bold" Margin="0 0 0 20"></TextBlock>

                <TextBox x:Name="albumTitleTextBox" materialDesign:HintAssist.Hint="Введите название альбома" Style="{StaticResource MaterialDesignFloatingHintTextBox}"></TextBox>
                
                <TextBox x:Name="albumReleaseYearTextBox" materialDesign:HintAssist.Hint="Введите год выпуска альбома" Style="{StaticResource MaterialDesignFloatingHintTextBox}"></TextBox>

                <TextBlock Text="Выберите исполнителей:" FontSize="14" FontStyle="Italic" FontWeight="SemiBold" Margin="0,10,0,0"/>
                <TextBox x:Name="searchTextBox" materialDesign:HintAssist.Hint="Поиск исполнителя..." Style="{StaticResource MaterialDesignFloatingHintTextBox}" TextChanged="SearchTextBox_TextChanged"/>
                <ListBox x:Name="artistsListBox" SelectionMode="Multiple" Height="100"></ListBox>

                <TextBlock Text="Фото должно быть квадратным (например, 300x300 px)" Foreground="Red" FontSize="12" Margin="0,10,0,0"/>
                <StackPanel Orientation="Horizontal" Margin="0 5 0 10">
                    <Button Content="Выбрать фото" Click="SelectImage_Click"/>
                    <TextBlock x:Name="imagePathTextBlock" Text="Файл не выбран" Margin="10,5,0,0" FontSize="12"/>
                </StackPanel>
                <Image x:Name="albumCover" Width="100" Height="100" Stretch="Uniform" HorizontalAlignment="Center" Margin="0 10 0 0"/>

                <Grid Margin="0 0 0 20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Button HorizontalAlignment="Left" Content="Добавить" Margin="0,70,0,-102" Click="Add_Click"></Button>
                    <Button HorizontalAlignment="Right" Content="Отменить" Style="{StaticResource MaterialDesignFlatButton}" Margin="0,70,0,-102" Click="Cancel_Click" Grid.Column="1"></Button>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>
