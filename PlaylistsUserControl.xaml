<UserControl x:Class="MusicCollectionApp.PlaylistsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicCollectionApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#1c0426">
        <Border MinWidth="400" Margin="15,0,15,0" Background="#e0beed" VerticalAlignment="Center" Padding="30" MaxWidth="750" CornerRadius="20" Height="410">
            <Border.Effect>
                <DropShadowEffect BlurRadius="40" Color="#e0beed" ShadowDepth="0"></DropShadowEffect>
            </Border.Effect>
            <Label Content="ПЛЕЙЛИСТЫ" Margin="96,111,96,111" FontSize="72" FontWeight="Bold"/>
        </Border>
    </Grid>
</UserControl>
